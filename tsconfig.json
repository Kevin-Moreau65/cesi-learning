{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "rootDir": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "$routes": [
                "./routes"
            ],
            "$controllers": [
                "./controllers"
            ],
            "$utils": [
                "./utils"
            ],
            "$models": [
                "./models"
            ]
        }
    }
}