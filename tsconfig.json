{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "rootDir": "./",
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "$routes/*": [
                "./routes/*"
            ],
            "$controllers/*": [
                "./controllers/*"
            ],
            "$utils/*": [
                "./utils/*"
            ],
            "$models/*": [
                "models/*"
            ]
            }
        }
    }